{
  "name": "devi-edtech-server",
  "version": "1.0.0",
  "description": "Devi's EdTech Learning Platform Backend",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --exec \"tsx src/main.ts\"",
    "dev:tsx": "tsx watch src/main.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/main.js",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "deploy": "npm run build && npm run db:migrate:deploy",
    "postinstall": "npx prisma generate"
  },
  "keywords": [
    "edtech",
    "graphql",
    "typescript",
    "prisma"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
